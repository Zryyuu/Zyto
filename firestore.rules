rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Todo items subcollection
      match /todos/{todoId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Budget transactions subcollection
      match /transactions/{transactionId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Savings plans subcollection
      match /savings_plans/{planId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Savings transactions subcollection
      match /savings_transactions/{savingsTransactionId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
